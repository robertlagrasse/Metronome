<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/patternEditorCardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        style="@style/cardviewStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.jjoe64.graphview.GraphView
                android:id="@+id/patternEditorGraph"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/patternName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pattern_name"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.umpquariversoftware.metronome.UI.SnappyRecyclerView
                android:layout_width="match_parent"
                android:layout_height="?listPreferredItemHeightLarge">
            </com.umpquariversoftware.metronome.UI.SnappyRecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/first"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/second"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/third"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/fourth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/fifth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/sixth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/seventh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/eighth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?listPreferredItemHeight"
                android:text="@string/beat"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="?listPreferredItemHeight"
                android:id="@+id/patternBeatDisplay"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="?listPreferredItemHeightLarge"
                    android:layout_height="?listPreferredItemHeightLarge"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_chevron_left"
                    android:scaleType="fitCenter"
                    android:id="@+id/patternBeatLast" />
                <ImageButton
                    android:layout_width="?listPreferredItemHeightLarge"
                    android:layout_height="?listPreferredItemHeightLarge"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_new"
                    android:scaleType="fitCenter"
                    android:id="@+id/patternBeatNew" />
                <ImageButton
                    android:layout_width="?listPreferredItemHeightLarge"
                    android:layout_height="?listPreferredItemHeightLarge"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_chevron_right"
                    android:scaleType="fitCenter"
                    android:id="@+id/patternBeatNext" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/patternBeatDelete"
                    android:layout_width="?listPreferredItemHeightLarge"
                    android:layout_height="?listPreferredItemHeightLarge"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_x_circle"
                    android:scaleType="fitCenter" />

                <ImageButton
                    android:id="@+id/patternSave"
                    android:layout_width="?listPreferredItemHeightLarge"
                    android:layout_height="?listPreferredItemHeightLarge"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_check_circle_outline"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>